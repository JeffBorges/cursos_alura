<html>
  <body>
    <form action="/produtos" method="post">
      <div>
        <label for="titulo">Titulo</label>
        <input type="text" id="titulo" placeholder="coloque o titulo" name="titulo"/>
      </div>
      <div>
        <label for="preco">Preço</label>
        <input type="text" id="preco" placeholder="150.25" name="preco"/>
      </div>
      <div>
        <label for="descricao">Descrição</label>
        <textarea name="descricao" rows="8" cols="30" placeholder="fale sobre o livro" name="descricao"></textarea>
      </div>

      <input type="submit" value="Gravar"/>
    </form>
  </body>
</html>
